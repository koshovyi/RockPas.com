@model RockPaperScissors.Models.ContactsVw
@{
	ViewData["Title"] = "Contacts";
}

<hr />
<br />
<div class="row">
	<div class="col-lg-12">

		@using (Html.BeginForm(FormMethod.Post, new { @class = "kt-form", autocomplete = "off" }))
		{
			<div class="row">
				<div class="col-xl-12 col-md-12 col-sm-12">

					<alert-tempdata />

					<div class="form-group">
						<label>Name</label>
						@Html.TextBoxFor(t => t.Name, new { @class = "form-control", placeholder = "Name" })
						@Html.ValidationMessageFor(v => v.Name)
					</div>

					<div class="form-group">
						<label>Contacts</label>
						@Html.TextBoxFor(t => t.Contacts, new { @class = "form-control", placeholder = "Contacts" })
						@Html.ValidationMessageFor(v => v.Contacts)
						<span class="form-text text-muted">We'll never share your email, phone or other contacts with anyone else.</span>
					</div>

					<div class="form-group">
						<label for="exampleTextarea">Your Message</label>
						@Html.TextAreaFor(t => t.Memo, new { @class = "form-control", placeholder = "Your message", rows = 20 })
						@Html.ValidationMessageFor(v => v.Memo)
					</div>

					<div class="form-group">
						<div class="g-recaptcha" data-sitekey="@Model.GoogleRecaptchaApiKey" data-callback="CheckRecaptcha">
						</div>
					</div>

					<div class="form-group">
						<button id="SubmitButton" type="submit" class="btn btn-danger font-weight-bold mr-2" disabled="disabled">Submit</button>
					</div>

				</div>
			</div>

		}

		</div>
</div>

@section Scripts{
	<partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
	<script src='https://www.google.com/recaptcha/api.js'></script>
	<script>
		function CheckRecaptcha() {
			$('#SubmitButton').removeAttr('disabled');
			$('#SubmitButton').removeClass('disabled');
		}
	</script>
}